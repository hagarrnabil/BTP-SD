{
  "xsappname": "authn-v0",
  "tenant-mode": "dedicated",
  "oauth2-configuration": {
    "credential-types": ["x509"]
  },
  "scopes": [
    {
      "name": "$XSAPPNAME.Read",
      "description": "Read Permissions."
    },
    {
      "name": "$XSAPPNAME.User",
      "description": "Does all actions."
    },
    {
      "name": "$XSAPPNAME.Full",
      "description": "Full access to create, update, delete, and view."
    },
    {
      "name": "$XSAPPNAME.Modify",
      "description": "Access to update and delete."
    },
    {
      "name": "$XSAPPNAME.View",
      "description": "Access to view only."
    },
    {
      "name": "$XSAPPNAME.ReadExceptTotal",
      "description": "Can not read total value."
    }
  ],
  "role-templates": [
    {
      "name": "Viewer",
      "description": "View Data",
      "scope-references": [
        "$XSAPPNAME.Read"
      ]
    },
    {
      "name": "User",
      "description": "Does all actions",
      "scope-references": [
        "$XSAPPNAME.User"
      ]
    },
    {
      "name": "Full",
      "description": "Role with full access (create, update, delete, view)",
      "scope-references": [
        "$XSAPPNAME.Full"
      ]
    },
    {
      "name": "Modify",
      "description": "Role with modify access (update, delete)",
      "scope-references": [
        "$XSAPPNAME.Modify"
      ]
    },
    {
      "name": "View",
      "description": "Role with view-only access",
      "scope-references": [
        "$XSAPPNAME.View"
      ]
    },
    {
      "name": "ReadExceptTotal",
      "description": "Can not read total value.",
      "scope-references": [
        "$XSAPPNAME.ReadExceptTotal"
      ]
    }
  ],
  "role-collections": [
    {
      "name": "XSUAA-Viewer",
      "description": "Viewer (read)",
      "role-template-references": [
        "$XSAPPNAME.Viewer"
      ]
    },
    {
      "name": "XSUAA-User",
      "description": "User",
      "role-template-references": [
        "$XSAPPNAME.User"
      ]
    },
    {
      "name": "XSUAA-Full",
      "description": "Role collection with full access permissions",
      "role-template-references": [
        "$XSAPPNAME.Full"
      ]
    },
    {
      "name": "XSUAA-Modify",
      "description": "Role collection with modify access permissions",
      "role-template-references": [
        "$XSAPPNAME.Modify"
      ]
    },
    {
      "name": "XSUAA-View",
      "description": "Role collection with view-only permissions",
      "role-template-references": [
        "$XSAPPNAME.View"
      ]
    },
    {
      "name": "XSUAA-ReadExceptTotal",
      "description": "Role collection with can not read total value",
      "role-template-references": [
        "$XSAPPNAME.ReadExceptTotal"
      ]
    }
  ]
}
