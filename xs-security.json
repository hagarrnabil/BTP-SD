{
  "xsappname": "spring-security-hybrid-usage",
  "tenant-mode": "dedicated",
  "oauth2-configuration": {
    "credential-types": ["x509"]
  },
  "scopes": [
    {
      "name": "$XSAPPNAME.Read",
      "description": "Read Permissions."
    },
    {
      "name": "$XSAPPNAME.Write",
      "description": "Write Permissions."
    }
  ],
  "role-templates": [
    {
      "name": "Viewer",
      "description": "View Data",
      "scope-references": [
        "$XSAPPNAME.Read"
      ]
    },
    {
      "name": "Admin",
      "description": "Admin (Read and Write)",
      "scope-references": [
        "$XSAPPNAME.Read",
        "$XSAPPNAME.Write"
      ]
    }
  ],
  "role-collections": [
    {
      "name": "XSUAA-Viewer",
      "description": "Viewer (read)",
      "role-template-references": [
        "$XSAPPNAME.Viewer"
      ]
    },
    {
      "name": "XSUAA-Admin",
      "description": "Admin (read and write)",
      "role-template-references": [
        "$XSAPPNAME.Admin"
      ]
    }
  ]
}
