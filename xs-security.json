{
  "xsappname": "spring-security-hybrid-usage",
  "tenant-mode": "dedicated",
  "oauth2-configuration": {
    "credential-types": ["x509"]
  },
  "scopes": [
    {
      "name": "$XSAPPNAME.Read",
      "description": "Read Permissions."
    },
    {
      "name": "$XSAPPNAME.invoice.read",
      "description": "Read access to invoices."
    },
    {
      "name": "$XSAPPNAME.invoice.read.exceptTotal",
      "description": "Read access to invoices except total amount."
    },
    {
      "name": "$XSAPPNAME.salesorder.read",
      "description": "Read access to sales orders."
    }
  ],
  "role-templates": [
    {
      "name": "Viewer",
      "description": "View Data",
      "scope-references": [
        "$XSAPPNAME.Read"
      ]
    },
    {
      "name": "InvoiceViewer",
      "description": "View Invoice Data",
      "scope-references": [
        "$XSAPPNAME.invoice.read"
      ]
    },
    {
      "name": "InvoiceViewerExceptTotal",
      "description": "View Invoice Data except total amount",
      "scope-references": [
        "$XSAPPNAME.invoice.read.exceptTotal"
      ]
    },
    {
      "name": "SalesOrderViewer",
      "description": "View Sales Order Data",
      "scope-references": [
        "$XSAPPNAME.salesorder.read"
      ]
    }
  ],
  "role-collections": [
    {
      "name": "XSUAA-Read",
      "description": "Viewer (read)",
      "role-template-references": [
        "$XSAPPNAME.Read"
      ]
    },
    {
      "name": "Invoice-Read",
      "description": "Viewer (read access to invoices only)",
      "role-template-references": [
        "$XSAPPNAME.InvoiceViewer"
      ]
    },
    {
      "name": "Invoice-Read-ExceptTotal",
      "description": "Viewer (read access to invoices except total amount)",
      "role-template-references": [
        "$XSAPPNAME.InvoiceViewerExceptTotal"
      ]
    }
  ]
}
